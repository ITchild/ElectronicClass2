        <!--</RelativeLayout>-->

    </LinearLayout>

    <TextView
        android:id="@+id/setting_appName_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tool:text="软件名称：电子班牌"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/setting_version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tool:text="版本号：1.23.6"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/setting_Copyright_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        tool:text="@string/copyRight"
        android:textColor="@color/white" />

</LinearLayout>